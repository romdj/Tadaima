# =============================================================================
# Tadaima - European Property Search - Environment Configuration
# =============================================================================

# =============================================================================
# Global Configuration
# =============================================================================
NODE_ENV=development

# =============================================================================
# GraphQL Server Configuration
# =============================================================================
PORT=4000
GRAPHQL_PLAYGROUND=true
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# Frontend Configuration (Vite)
# =============================================================================
VITE_GRAPHQL_URL=http://localhost:4000/graphql
VITE_DEV_MODE=true

# =============================================================================
# European Property API Keys
# =============================================================================
# Get these from the respective property portals

# ImmoScout24 (Germany) - https://api.immobilienscout24.de/
IMMOSCOUT24_API_KEY=your_immoscout24_api_key_here

# Idealista (Spain, Italy, Portugal) - https://developers.idealista.com/
IDEALISTA_API_KEY=your_idealista_api_key_here
IDEALISTA_API_SECRET=your_idealista_api_secret_here

# Daft (Ireland) - https://api.daft.ie/doc/v3/
DAFT_API_KEY=your_daft_api_key_here

# FINN.no (Norway) - https://www.finn.no/api/
FINN_API_KEY=your_finn_api_key_here

# Hemnet (Sweden) - https://integration.hemnet.se/
HEMNET_API_KEY=your_hemnet_api_key_here

# Immoweb (Belgium) - https://developer.immoweb.be/
IMMOWEB_API_KEY=your_immoweb_api_key_here

# Otodom (Poland) - https://developer.olxgroup.com/
OTODOM_API_KEY=your_otodom_api_key_here

# Ingatlan (Hungary) - https://api.ingatlan.com/
INGATLAN_API_KEY=your_ingatlan_api_key_here

# =============================================================================
# Development Configuration
# =============================================================================
# Set to false to disable development features
DEV_MODE=true

# =============================================================================
# Production Configuration
# =============================================================================
# Uncomment and configure for production deployment
# NODE_ENV=production
# PORT=3000
# GRAPHQL_PLAYGROUND=false
# CORS_ORIGIN=https://your-production-domain.com
# VITE_GRAPHQL_URL=https://your-production-api.com/graphql
# VITE_DEV_MODE=false
# DEV_MODE=false

# =============================================================================
# Testing Configuration
# =============================================================================
# Uncomment for testing environment
# NODE_ENV=test
# PORT=4001
# GRAPHQL_PLAYGROUND=false
# CORS_ORIGIN=http://localhost:3000
# VITE_GRAPHQL_URL=http://localhost:4001/graphql
# VITE_DEV_MODE=false
# DEV_MODE=false